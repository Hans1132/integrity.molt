{
  "name": "integrity.molt",
  "version": "0.1.0",
  "description": "Autonomous security audit agent for Moltbook",
  "runtime": "docker",
  "port": 8000,
  "env": {
    "TELEGRAM_TOKEN": {
      "description": "Telegram Bot API token",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI GPT-4 API key",
      "required": true
    },
    "SOLANA_PUBLIC_KEY": {
      "description": "Your integrity.molt Solana wallet address",
      "required": true
    },
    "ENVIRONMENT": {
      "description": "Environment (development/production)",
      "default": "production"
    },
    "LOG_LEVEL": {
      "description": "Logging level (DEBUG/INFO/WARNING/ERROR)",
      "default": "INFO"
    }
  },
  "resources": {
    "memory": "512MB",
    "cpu": "0.5",
    "disk": "1GB"
  },
  "health_check": {
    "enabled": true,
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "scaling": {
    "min": 1,
    "max": 3,
    "metric": "cpu",
    "threshold": 80
  }
}
